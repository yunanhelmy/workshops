!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    .navbar.navbar-default{role: "navigation"}
      .container.header-workshop
        .navbar-header
          %button.navbar-toggle{:'data-toggle' => "collapse",  :'data-target' => '.navbar-collapse'}
          %span.sr-only Toggle
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
          %a.brand{:href => "/"} 
            %h2
              %span.glyphicon.glyphicon-eye-open 
              &nbsp;&nbsp;Netguru Workshop
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right.menu
            %li
              - if current_user.present? 
                = link_to(raw('<span class="glyphicon glyphicon-lock"></span> Set To Admin'), admin_set_to_path, method: :post) unless current_user.admin?
            %li
              = link_to(raw('<span class="glyphicon glyphicon-ban-circle"></span> Logout'), destroy_user_session_path, method: :delete) if current_user.present?
              = link_to(raw('<span class="glyphicon glyphicon-lock"></span> Login'), new_user_session_path) if current_user.nil?
    #main{:role => "main"}
      .container
        .content
          .row
            .col-md-12.col-sm-12.col-lg-12
              = yield
              .footer_bottom_content
                Netguru Workshop - Helmy
