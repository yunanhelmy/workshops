<div class="row">
	<div class="col-sm-4 col-lg-4 col-md-4">
		<h2>Sign in</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-group">
		    <%= f.input :email, required: false, autofocus: true, input_html: {class: "form-control form-control-inline"}, label: false, placeholder: "Email" %>
		    <%= f.input :password, required: false, input_html: {class: "form-control form-control-inline"}, label: false, placeholder: "Password" %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>
</div>